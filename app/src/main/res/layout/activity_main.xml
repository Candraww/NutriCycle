<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nutri_surface_soft"
    tools:context=".MainActivity">

    <!-- Header dengan Shadow -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pageToolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="0dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="20dp"
            android:paddingBottom="16dp">

            <!-- Baris 1: Logo + Nama + Notifikasi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Logo di Kiri -->
                <ImageView
                    android:id="@+id/toolbarLogo"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/nutricycle_logo"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter" />

                <!-- Nama dan Subtitle -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/toolbarTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NutriCycle"
                        android:textColor="@color/nutri_primary_dark"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.02" />

                    <TextView
                        android:id="@+id/toolbarSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Katering sehat setiap hari"
                        android:textColor="@color/nutri_text_secondary"
                        android:textSize="13sp"
                        android:letterSpacing="0.01" />
                </LinearLayout>

                <!-- Icon Notifikasi di Kanan -->
                <ImageView
                    android:id="@+id/btnNotification"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_notification"
                    android:tint="@color/nutri_primary"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless" />
            </LinearLayout>

            <!-- Baris 2: Promo Highlight Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/promoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/nutri_green_main"
                app:cardCornerRadius="28dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_megaphone"
                        android:tint="@color/white" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/toolbarInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Promo hari ini tersedia"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Diskon hingga 20% untuk paket mingguan"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:alpha="0.95" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="detail promo â†’"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:alpha="0.9" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Scroll View -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/homeScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pageToolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp">

            <!-- Section: Pilihan Katering -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilihan Katering"
                    android:textColor="@color/nutri_card_text"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.01" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Atur pola makan sesuai kebutuhanmu"
                    android:textColor="@color/nutri_text_secondary"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <!-- Card: Catering Mingguan -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardWeeklyCatering"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_marginBottom="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="6dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_card_weekly_gradient"
                            android:padding="24dp">

                            <LinearLayout
                                android:id="@+id/cardWeeklyText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/cardWeeklyArt"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Catering Mingguan"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:letterSpacing="0.01" />

                                <View
                                    android:layout_width="120dp"
                                    android:layout_height="5dp"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/card_badge_background" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="14dp"
                                    android:text="Atur pola makan untuk seminggu penuh"
                                    android:textColor="@color/white"
                                    android:textSize="13sp"
                                    android:alpha="0.95"
                                    android:lineSpacingExtra="2dp" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/cardWeeklyArt"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:src="@drawable/weekkat"
                                android:scaleType="centerCrop"
                                android:alpha="0.9"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/cardWeeklyText"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintWidth_percent="0.45" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Card: Gizi Meter -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardGiziMeter"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="6dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_card_gizi_gradient"
                            android:padding="24dp">

                            <LinearLayout
                                android:id="@+id/cardEventText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/cardEventArt"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Gizi Meter"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:letterSpacing="0.01" />

                                <View
                                    android:layout_width="100dp"
                                    android:layout_height="5dp"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/card_badge_background" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="14dp"
                                    android:text="Lihat progres nutrisi kamu"
                                    android:textColor="@color/white"
                                    android:textSize="13sp"
                                    android:alpha="0.95"
                                    android:lineSpacingExtra="2dp" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/cardEventArt"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:src="@drawable/ic_plate"
                                android:scaleType="fitCenter"
                                android:alpha="0.9"
                                android:padding="20dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/cardEventText"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintWidth_percent="0.35" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>

            <!-- Section: Tentang NutriCycle -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tentang NutriCycle"
                        android:textColor="@color/nutri_card_text"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.01" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="NutriCycle adalah layanan katering sehat berbasis gaya hidup yang menghadirkan makanan bergizi, praktis, dan ramah lingkungan untuk mahasiswa dan pekerja."
                        android:textColor="@color/nutri_text_secondary"
                        android:textSize="14sp"
                        android:lineSpacingMultiplier="1.5"
                        android:lineSpacingExtra="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Kami percaya, hidup sehat dimulai dari satu porsi makanan yang tepat."
                        android:textColor="@color/nutri_text_secondary"
                        android:textSize="14sp"
                        android:textStyle="italic"
                        android:lineSpacingMultiplier="1.5"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <include
        android:id="@+id/bottomNav"
        layout="@layout/view_bottom_nav" />

</androidx.constraintlayout.widget.ConstraintLayout>



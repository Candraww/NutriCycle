<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:visibility="gone">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pilih Metode Pembayaran"
                    android:textColor="@color/nutri_card_text"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/btnClosePayment"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_close"
                    android:tint="@color/nutri_text_secondary"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="4dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/nutri_detail_divider" />

            <!-- Payment Methods List -->
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:maxHeight="400dp"
                android:paddingBottom="20dp"
                android:clipToPadding="false">

                <LinearLayout
                    android:id="@+id/paymentMethodsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:paddingBottom="120dp">

                    <!-- Bank Transfer Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bank Transfer"
                        android:textColor="@color/nutri_text_secondary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <!-- Mandiri -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/paymentMandiri"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:strokeColor="@color/nutri_detail_divider"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/logoMandiri"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/mandiri"
                                android:scaleType="centerCrop"
                                android:contentDescription="Logo Bank Mandiri" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:text="Bank Mandiri"
                                android:textColor="@color/nutri_card_text"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/checkMandiri"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_radio_unchecked"
                                android:tint="@color/nutri_primary"
                                android:visibility="gone" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- BRI -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/paymentBRI"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:strokeColor="@color/nutri_detail_divider"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/logoBRI"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bri"
                                android:scaleType="centerCrop"
                                android:contentDescription="Logo Bank BRI" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:text="Bank BRI"
                                android:textColor="@color/nutri_card_text"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/checkBRI"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_radio_unchecked"
                                android:tint="@color/nutri_primary"
                                android:visibility="gone" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- BNI -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/paymentBNI"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:strokeColor="@color/nutri_detail_divider"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/logoBNI"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bni"
                                android:scaleType="centerCrop"
                                android:contentDescription="Logo Bank BNI" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:text="Bank BNI"
                                android:textColor="@color/nutri_card_text"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/checkBNI"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_radio_unchecked"
                                android:tint="@color/nutri_primary"
                                android:visibility="gone" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- BCA -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/paymentBCA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:strokeColor="@color/nutri_detail_divider"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/logoBCA"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bca"
                                android:scaleType="centerCrop"
                                android:contentDescription="Logo Bank BCA" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:text="Bank BCA"
                                android:textColor="@color/nutri_card_text"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/checkBCA"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_radio_unchecked"
                                android:tint="@color/nutri_primary"
                                android:visibility="gone" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- E-Wallet Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E-Wallet"
                        android:textColor="@color/nutri_text_secondary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <!-- OVO -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/paymentOVO"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:strokeColor="@color/nutri_detail_divider"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/logoOVO"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/ovo"
                                android:scaleType="centerCrop"
                                android:contentDescription="Logo OVO" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:text="OVO"
                                android:textColor="@color/nutri_card_text"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/checkOVO"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_radio_unchecked"
                                android:tint="@color/nutri_primary"
                                android:visibility="gone" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Dana -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/paymentDana"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:strokeColor="@color/nutri_detail_divider"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/logoDana"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/dana"
                                android:scaleType="centerCrop"
                                android:contentDescription="Logo Dana" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:text="Dana"
                                android:textColor="@color/nutri_card_text"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/checkDana"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_radio_unchecked"
                                android:tint="@color/nutri_primary"
                                android:visibility="gone" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- GoPay -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/paymentGoPay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:strokeColor="@color/nutri_detail_divider"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/logoGoPay"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/gopay"
                                android:scaleType="centerCrop"
                                android:contentDescription="Logo GoPay" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:text="GoPay"
                                android:textColor="@color/nutri_card_text"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/checkGoPay"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_radio_unchecked"
                                android:tint="@color/nutri_primary"
                                android:visibility="gone" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- QRIS -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QRIS"
                        android:textColor="@color/nutri_text_secondary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/paymentQRIS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:strokeColor="@color/nutri_detail_divider"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/logoQRIS"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/qris"
                                android:scaleType="centerCrop"
                                android:contentDescription="Logo QRIS" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:text="QRIS"
                                android:textColor="@color/nutri_card_text"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/checkQRIS"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_radio_unchecked"
                                android:tint="@color/nutri_primary"
                                android:visibility="gone" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Cash on Delivery -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cash on Delivery"
                        android:textColor="@color/nutri_text_secondary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/paymentCOD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:strokeColor="@color/nutri_detail_divider"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/logoCOD"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/cod"
                                android:scaleType="centerCrop"
                                android:contentDescription="Logo Cash on Delivery" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:text="Cash on Delivery"
                                android:textColor="@color/nutri_card_text"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/checkCOD"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_radio_unchecked"
                                android:tint="@color/nutri_primary"
                                android:visibility="gone" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <!-- Bottom Buttons -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/nutri_detail_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnAddPayment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@color/nutri_detail_divider"
                    app:strokeWidth="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingVertical="14dp"
                        android:text="Tambah metode pembayaran"
                        android:textColor="@color/nutri_card_text"
                        android:textSize="14sp" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnDonePayment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/nutri_primary"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingVertical="14dp"
                        android:text="Selesai"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>

